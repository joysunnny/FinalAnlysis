import java.util.ArrayList;
import java.util.List;

public class ClassHierarchyInfo {
    private String className;
    private List<FieldInfo> fields = new ArrayList<>();
    private List<MethodInfo> methods = new ArrayList<>();
    private List<ClassHierarchyInfo> level1Dependencies = new ArrayList<>(); // NEW

    public String getClassName() { return className; }
    public void setClassName(String className) { this.className = className; }

    public List<FieldInfo> getFields() { return fields; }
    public void setFields(List<FieldInfo> fields) { this.fields = fields; }

    public List<MethodInfo> getMethods() { return methods; }
    public void setMethods(List<MethodInfo> methods) { this.methods = methods; }

    public List<ClassHierarchyInfo> getLevel1Dependencies() { return level1Dependencies; }
    public void setLevel1Dependencies(List<ClassHierarchyInfo> level1Dependencies) { this.level1Dependencies = level1Dependencies; }
}
